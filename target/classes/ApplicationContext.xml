<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <!--<bean id="person" class="test.demo.spring.core.person.Person" scope="singleton" />-->

    <bean id="person" class="test.demo.spring.core.person.Person" scope="singleton" >
        <property name="name" value="testName"/>
        <property name="surname" value="testSurname"/>
        <property name="backPack" ref="backPack"/>
    </bean>

    <bean id="backPack" class="test.demo.spring.core.person.BackPack" scope="singleton" >
        <property name="capacity" value="1"/>
    </bean>


</beans>